<p class="metadata">
  Commenting as <%= link_to current_user.username, user_path(current_user) %>:
</p>

<%= form_with(model: [@post, @comment], local: true,
              class: 'comment-form') do |f| %>
  <%= render partial: 'shared/error_messages',
             locals: { errors: @comment.errors } %>

  <%= f.text_area :text,
                  class: 'form-control comment-draft',
                  placeholder: 'Comment here...' %>

  <div class="buttons">
    <%= f.submit 'Submit', class: 'btn btn-primary'%>
  </div>
<% end %>