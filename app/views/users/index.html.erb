<% provide(:title, 'All users') %>
<h1>All users</h1>

<div class="row">
  <ul class="users">
    <% @users.each do |user| %>
      <li class="user"><%= render user %></li>
    <% end %>
  </ul>
</div>

<div class="pagination">
  <div class="pagination_info">
    <%= page_entries_info @users %>
  </div>
  <%= will_paginate @users, renderer: BootstrapPagination::Rails,
                            container: false %>
</div>
